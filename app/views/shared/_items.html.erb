<% items ||= nil %>

<% if items.present? %>
  <div class="form-divider"></div>
  <% items.each do |item| %>
    <%= link_to item_path(item.id) do %>
      <div class="news-list-item">
        <div class="list-image">
          <img src="<%= item&.image.thumb.url.presence || '/img/avatar-bg.jpg' %>" width="100" height="100">
        </div>
        <div class="list-content">
          <div class="item-title"><%= item&.title&.truncate(30) %></div>
          <a href="#" class="list-author"><%= item&.location %></a> <span class="list-time"><%= item.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
          <div class="item-price"><%= item&.price %></div>
        </div>
      </div>
    <% end %>
    <div class="form-mini-divider"></div>
  <% end %>
<% else %>
  <div class="form-divider"></div>
  <div class="list-box">
    <a class="list-item">
      <span class="list-author">게시물이 없습니다.</span>
    </a>
  </div>
<% end %>
